<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_animation_transition_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.thedeveloperworldisyours.lope.animationtransition.MenuAnimationTransitionActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_animation_transition_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/menu_animation_transition_activity_toolbar"
        android:background="@drawable/toolbar_shadow" />

    <Button
        android:id="@+id/menu_animation_transition_activity_view_pager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_menu_first_margin_top"
        android:background="@drawable/background_button"
        android:onClick="goToViewPagerTransition"
        android:padding="@dimen/padding_view"
        android:text="@string/activity_menu_animation_transition_view_pager_button"
        android:textColor="@color/colorTextButton" />

    <Button
        android:id="@+id/menu_animation_transition_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_animation_transition_activity_view_pager_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_menu_first_margin_top"
        android:background="@drawable/background_button"
        android:onClick="gotToInitAnimationRecyclerView"
        android:padding="@dimen/padding_view"
        android:text="@string/activity_menu_animation_transition_recycler_view_button"
        android:textColor="@color/colorTextButton" />

</RelativeLayout>
